pipeline {
    agent any

    tools {
        nodejs "node"
    }

    stages {
        stage('All enviroment') {
            steps {
                sh 'docker info'
            }
        }
        stage('Install dependencies') {
            steps {
                sh 'npm install'
                sh 'yarn'
            }
        }
        stage('Unit Tests') {
            steps {
                sh 'yarn test'
            }
        }
        stage('Integration Tests') {
            steps {
                echo 'Testing e2e.'
            }
        }
    }
}
