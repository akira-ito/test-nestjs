pipeline {
    agent { node { label 'docker-agent' } }

    tools {
        nodejs "node"
    }
    
    dir ('workspace/Sip Local/DEV Backend') 

    stages {
        stage('All enviroment') {
            steps {
                sh 'docker info'
            }
        }
        stage('Install dependencies') {
            steps {
                sh 'npm install'
                sh 'yarn'
            }
        }
        stage('Unit Tests') {
            steps {
                sh 'yarn test'
            }
        }
        stage('Integration Tests') {
            steps {
                sh 'docker ps'
            }
        }
    }
}
