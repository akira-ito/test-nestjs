pipeline {
    agent any

    tools {
        nodejs "node"
        "org.jenkinsci.plugins.docker.commons.tools.DockerTool" "docker"
    }

    stages {
        stage('All enviroment') {
            steps {
                sh 'docker info'
            }
        }
        stage('Install dependencies') {
            steps {
                sh 'npm install'
                sh 'yarn'
            }
        }
        stage('Unit Tests') {
            steps {
                sh 'yarn test'
            }
        }
        stage('Integration Tests') {
            steps {
                sh 'docker ps'
            }
        }
    }
}
